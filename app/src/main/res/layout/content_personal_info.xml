<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_personal_info">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_mine_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                style="@style/Ripple.Item.Foreground"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="头像" />

                <com.biu.modulebase.binfenjiari.widget.CircleImageView
                    android:id="@+id/header"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/personal_header" />

            </FrameLayout>

            <include layout="@layout/divider_h" />

            <FrameLayout
                android:id="@+id/nickname_layout"
                style="@style/Ripple.Item.Foreground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="昵称" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin_64dp"
                    android:drawableRight="@mipmap/more_arrow_small"
                    android:lineSpacingExtra="0dp"
                    android:maxLines="2"
                    android:textColor="@color/colorTextGray" />

            </FrameLayout>

            <include layout="@layout/divider_h" />

            <FrameLayout
                android:id="@+id/signature_layout"
                style="@style/Ripple.Item.Foreground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="个性签名" />

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin_64dp"
                    android:drawableRight="@mipmap/more_arrow_small"
                    android:lineSpacingExtra="0dp"
                    android:maxLines="2"
                    android:textColor="@color/colorTextGray" />

            </FrameLayout>

            <include layout="@layout/divider_h" />

            <FrameLayout
                android:id="@+id/school_layout"
                style="@style/Ripple.Item.Foreground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="学校" />

                <TextView
                    android:id="@+id/school"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:drawableRight="@mipmap/more_arrow_small"
                    android:textColor="@color/colorTextGray" />

            </FrameLayout>

            <include layout="@layout/divider_h" />

            <FrameLayout
                android:id="@+id/grade_layout"
                style="@style/Ripple.Item.Foreground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="年级" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:drawableRight="@mipmap/more_arrow_small"
                    android:textColor="@color/colorTextGray" />

            </FrameLayout>

            <include layout="@layout/divider_h" />

            <FrameLayout
                android:id="@+id/interest_layout"
                style="@style/Ripple.Item.Foreground"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="爱好" />

                <TextView
                    android:id="@+id/interest"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center_vertical"
                    android:drawableRight="@mipmap/more_arrow_small"
                    android:textColor="@color/colorTextGray" />

            </FrameLayout>

            <include layout="@layout/divider_h" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_other_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_person_top_green" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="110dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/app_color_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="个性签名"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="@dimen/text_size_16" />

                </LinearLayout>


            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="55dp"
                android:elevation="4dp"
                app:cardCornerRadius="4dp"
                app:contentPadding="8dp"
                app:layout_anchorGravity="bottom">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_layout_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.biu.modulebase.binfenjiari.widget.CircleImageView
                                android:id="@+id/img_info"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@mipmap/personal_header" />

                            <TextView
                                android:id="@+id/tv_small_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/height_8dp"
                                android:drawableRight="@mipmap/icon_sex_woman"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="蔡慧慧"
                                android:textSize="16sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="8dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="4dp"
                                        android:text="学校"
                                        android:textColor="@color/app_text_color_primary"
                                        android:textSize="@dimen/text_size_14" />

                                    <TextView
                                        android:id="@+id/tv_schoolname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:paddingTop="8dp"
                                        android:text="博爱小学"
                                        android:textColor="@color/app_text_color_secondary"
                                        android:textSize="@dimen/text_size_14" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="4dp"
                                        android:text="年级"
                                        android:textColor="@color/app_text_color_primary"
                                        android:textSize="@dimen/text_size_14" />

                                    <TextView
                                        android:id="@+id/tv_classname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:paddingTop="8dp"
                                        android:text="6年级"
                                        android:textColor="@color/app_text_color_secondary"
                                        android:textSize="@dimen/text_size_14" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="4dp"
                                        android:text="爱好"
                                        android:textColor="@color/app_text_color_primary"
                                        android:textSize="@dimen/text_size_14" />

                                    <TextView
                                        android:id="@+id/tv_hobby"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="1"
                                        android:paddingTop="8dp"
                                        android:text="看书，打球"
                                        android:textColor="@color/app_text_color_secondary"
                                        android:textSize="@dimen/text_size_14" />


                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </FrameLayout>
</android.support.v4.widget.NestedScrollView>
