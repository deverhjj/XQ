<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_transparent_guide">

    <com.biu.modulebase.binfenjiari.widget.jazzviewpager.JazzyViewPager
        android:id="@+id/mViewPager"
        android:layout_width="299dp"
        android:layout_height="436dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

    <com.biu.modulebase.binfenjiari.widget.jazzviewpager.CirclePageIndicator
        android:id="@+id/main_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mViewPager"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/view_margin_8dp"
        android:padding="10dp" />

</RelativeLayout>