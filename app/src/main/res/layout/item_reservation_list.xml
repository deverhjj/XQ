<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/view_margin_8dp"
    android:paddingBottom="@dimen/view_margin_8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约中"
        android:gravity="center"
        android:minHeight="50dp"
        android:minWidth="90dp"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin_larger"
        android:paddingLeft="@dimen/activity_horizontal_margin_larger"
        android:textSize="@dimen/text_size_16"
        android:background="@drawable/selector_rr_orange_5_rest"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:text="2016-04-13~2016-07-15"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_10dp"
            android:textColor="@color/colorTextGray"
            android:text="有机草莓采摘"
            android:textSize="@dimen/text_size_14"
            android:id="@+id/name" />


    </LinearLayout>

</LinearLayout>
