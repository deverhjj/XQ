<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--card_view:cardCornerRadius="2dp"-->
    <!--android:layout_margin="@dimen/view_margin_4dp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_16dp">

            <com.biu.modulebase.binfenjiari.widget.RoundCornerImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/banner_pic" />

            <TextView
                android:id="@+id/tv_time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_margin="@dimen/margin_16dp"
                android:background="@drawable/bg_video_time"
                android:drawableLeft="@mipmap/bofang"
                android:drawablePadding="@dimen/view_margin_4dp"
                android:gravity="center"
                android:text="09:45"
                android:textColor="@color/white_dark"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/audio_start" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_16dp"
            android:text="户外的摄影技巧，简单快速学会，让节假日出行更多姿多彩。"
            android:textColor="@color/app_text_color_primary"
            android:textSize="@dimen/text_size_16" />


    </LinearLayout>

</android.support.v7.widget.CardView>