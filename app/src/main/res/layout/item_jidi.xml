<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_list_item"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/margin_16dp">

        <com.biu.modulebase.binfenjiari.widget.RoundCornerImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/banner_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_bottom_12dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="常州日日春农庄"
                    android:textColor="@color/app_text_color_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/view_margin_8dp"
                        android:gravity="left"
                        android:text="常州运河五号创意街区   23km"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_activity_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingTop="@dimen/view_margin_4dp"
                        android:text="当前活动：8"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

            </LinearLayout>

            <com.biu.modulebase.binfenjiari.widget.MyCheckBox
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:button="@drawable/selector_like"
                android:clickable="false"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="0"
                android:textColor="@color/colorTextGray" />

            <!--<include layout="@layout/part_action_list_item" />-->

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>