<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="18dp"
                android:drawableTop="@mipmap/fx_biaoqingx"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8.2dp"
                android:padding="20dp"
                android:text="享去\n陪你成长"
                android:textColor="@color/app_text_color_primary"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/colorAppBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:text="分享"
                android:textColor="@color/app_text_color_primary"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:drawableTop="@mipmap/fx_qq"
                    android:gravity="center_horizontal"
                    android:text="QQ"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/sina"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:drawableTop="@mipmap/fx_wb"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="微博"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/weixin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:drawableTop="@mipmap/fx_wx"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="微信"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/weixin_q"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:drawableTop="@mipmap/fx_pyq"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="朋友圈"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/qzone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:drawableTop="@mipmap/fx_qqkj"
                    android:gravity="center_horizontal"
                    android:text="QQ空间"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/fx_copy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:drawableTop="@mipmap/fx_copy"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="复制链接"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/view_margin_8dp"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorTextGray"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin_larger"
                    android:src="@mipmap/xq_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="享去 “正面照”，快扫一扫" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>