<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_16dp"
        android:paddingRight="@dimen/padding_right_16dp"
        android:paddingBottom="@dimen/view_margin_8dp"
        android:paddingTop="@dimen/view_margin_8dp">

        <com.biu.modulebase.binfenjiari.widget.RoundCornerImageView
            android:id="@+id/iv_circle_head_portrait"
            android:layout_width="@dimen/width_60dp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/width_60dp"
            android:src="@mipmap/common_pic"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_60dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/btn_circle_join">
                <TextView
                    android:id="@+id/tv_circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/app_text_color_primary"
                    android:layout_gravity="center_vertical"
                    android:text="三井小学吧"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:text="三井小学吧"
                    android:textColor="@color/app_text_color_secondary"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/join_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableLeft="@mipmap/sq_rs0"
                        android:drawablePadding="@dimen/padding_3dp"
                        android:text="3442人"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/post_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:drawableLeft="@mipmap/sq_tz0"
                        android:drawablePadding="@dimen/padding_3dp"
                        android:text="3424条"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/btn_circle_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_btn_outline_orange"
                android:paddingBottom="@dimen/view_margin_4dp"
                android:paddingLeft="@dimen/view_margin_12dp"
                android:paddingRight="@dimen/view_margin_12dp"
                android:paddingTop="@dimen/view_margin_4dp"
                android:text="加入"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>