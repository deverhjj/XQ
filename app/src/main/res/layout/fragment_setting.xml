<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_8dp"
        android:orientation="vertical">
        <include layout="@layout/divider_h"/>
        <FrameLayout
            android:id="@+id/signature_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Ripple.Item.Foreground"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="账号："/>

            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:textColor="@color/colorTextGray" />

        </FrameLayout>

        <include layout="@layout/divider_h"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Ripple.Item.Foreground"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="接收通知"/>

            <Switch
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>
        <include layout="@layout/divider_h"/>
        <FrameLayout
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Ripple.Item.Foreground"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="意见反馈"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/more_arrow_small"
                android:layout_gravity="right|center_vertical"/>

        </FrameLayout>
        <include layout="@layout/divider_h"/>
        <FrameLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Ripple.Item.Foreground"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关于"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/more_arrow_small"
                android:layout_gravity="right|center_vertical"/>
        </FrameLayout>
        <include layout="@layout/divider_h"/>
        <FrameLayout
            android:id="@+id/clear_cache_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            style="@style/Ripple.Item.Foreground"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="清除缓存"/>

            <TextView
                android:id="@+id/cache_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.00M"
                android:textColor="@color/colorTextGray"
                android:layout_gravity="right|center_vertical" />

        </FrameLayout>

        <Button
            android:id="@+id/exitBtn"
            style="@style/Ripple.Button_Orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="退出登录"/>
    </LinearLayout>



</LinearLayout>
