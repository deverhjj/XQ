<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_notice_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Ripple.Item.Background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_bottom_8dp"
        android:paddingLeft="@dimen/padding_left_16dp"
        android:paddingRight="@dimen/padding_right_16dp"
        android:paddingTop="@dimen/padding_top_8dp">

        <!--android:background="@drawable/selector_rr_orange_5_rest"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_top_2dp"
            android:paddingLeft="@dimen/view_margin_6dp"
            android:paddingRight="@dimen/view_margin_6dp"
            android:paddingTop="@dimen/padding_top_2dp"
            android:text="公告"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"
            android:textColor="@color/app_text_color_primary"
            android:typeface="monospace"/>

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_8dp"
            android:text="小学生和家长最爱去的学习资源好地方"
            android:textSize="@dimen/text_size_12"/>

    </LinearLayout>

</LinearLayout>