<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_circle_my_item"
    style="@style/Ripple.Item.Foreground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_list_item"
    android:paddingLeft="@dimen/padding_16dp"
    android:paddingRight="@dimen/padding_16dp"
    android:paddingBottom="@dimen/view_margin_8dp"
    android:paddingTop="@dimen/view_margin_8dp"
    tools:targetApi="lollipop"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.biu.modulebase.binfenjiari.widget.RoundCornerImageView
                android:id="@+id/circle_img"
                android:layout_width="@dimen/width_80dp"
                android:layout_height="@dimen/width_80dp"
                android:src="@mipmap/common_pic"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_text_color_primary"
                    android:text="星轨拍摄"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_bottom_5dp"
                    android:layout_marginTop="@dimen/margin_top_8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="星轨拍摄爱好者大集合"
                    android:textColor="@color/app_text_color_secondary"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:typeface="monospace"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/join_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawablePadding="@dimen/padding_3dp"
                        android:drawableLeft="@mipmap/sq_rs0"
                        android:text="3442人"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/post_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_left_16dp"
                        android:drawablePadding="@dimen/padding_3dp"
                        android:drawableLeft="@mipmap/sq_tz0"
                        android:text="3424条"
                        android:textColor="@color/app_text_color_secondary"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
