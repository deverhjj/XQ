<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selector_rr_white_5_rest"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/exit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你確定要离开我么?"
        android:layout_marginTop="@dimen/view_margin_8dp"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/colorTextGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="#D1D1D1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/exit_cancle_btn"
            android:text="我心软了"
            android:textColor="@color/colorTextGray"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/single_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#D1D1D1"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/exit_ok_btn"
            android:text="狠心退出"
            android:textColor="@color/colorTextGray"
            android:textSize="18sp" />
    </LinearLayout>




</LinearLayout>
