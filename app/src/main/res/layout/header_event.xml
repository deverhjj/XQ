<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_120dp"
        android:background="@color/app_color_foreground">

        <include
            layout="@layout/fragment_viewpager"/>

        <RadioGroup
            android:id="@+id/dotGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_banner_dot"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin_8dp"
                android:layout_marginRight="@dimen/view_margin_8dp"
                android:button="@drawable/selector_banner_dot"
                android:checked="false"/>

            <RadioButton
                android:id="@+id/third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector_banner_dot"/>
        </RadioGroup>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_foreground"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_event"
            style="@style/Ripple.Item.Foreground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top_8dp"
            android:paddingBottom="@dimen/padding_bottom_8dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/hd_rw"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="活动"
                    android:layout_marginTop="@dimen/margin_top_5dp"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_comm"
            style="@style/Ripple.Item.Foreground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top_8dp"
            android:paddingBottom="@dimen/padding_bottom_8dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/hd_jl"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="交流"
                    android:textColor="@color/app_text_color_primary"
                    android:layout_marginTop="@dimen/margin_top_5dp"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_ranking"
            style="@style/Ripple.Item.Foreground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/padding_top_8dp"
            android:paddingBottom="@dimen/padding_bottom_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_home_discovery_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/hd_ph"/>

                <TextView
                    android:id="@+id/tv_dis_title_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_5dp"
                    android:gravity="center"
                    android:text="排行"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="@dimen/text_size_14"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>



</LinearLayout>