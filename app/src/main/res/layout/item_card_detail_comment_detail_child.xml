<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_comment_detail_child"
    style="@style/Ripple.Item.Foreground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingLeft="69dp"
    android:paddingTop="@dimen/padding_top_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.biu.modulebase.binfenjiari.widget.CircleImageView
            android:id="@+id/iv_head_portrait"
            android:layout_width="@dimen/width_40dp"
            android:layout_height="@dimen/height_40dp"
            android:layout_gravity="top"
            android:src="@mipmap/header_pic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_8dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="中奖晒单广场"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="14sp"/>

                <ImageButton
                    android:id="@+id/ib_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right_16dp"
                    android:paddingLeft="@dimen/padding_left_16dp"
                    android:layout_gravity="right|center_vertical"
                    android:background="@null"
                    android:src="@mipmap/reply_ic"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_1dp"
                android:text="21小时前"
                android:textColor="@color/app_text_color_secondary"
                android:textSize="10sp"/>


            <TextView
                android:id="@+id/tv_comment_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:layout_marginRight="@dimen/margin_right_16dp"
                android:lineSpacingMultiplier="1.1"
                android:text="好谜底，里吃到回调刚萨达阿萨斯大回来的的肯定没错"
                android:textColor="@color/app_text_color_secondary"
                android:textSize="@dimen/text_size_14"/>


            <TextView
                android:id="@+id/tv_delete_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="@dimen/padding_bottom_8dp"
                android:paddingTop="@dimen/padding_top_8dp"
                android:paddingRight="@dimen/padding_right_16dp"
                android:paddingLeft="@dimen/padding_left_16dp"
                android:lineSpacingMultiplier="1.1"
                android:text="删除"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_12"
                android:visibility="visible"
                style="@style/Ripple.Item.Background"
                android:clickable="true"/>

            <include
                layout="@layout/item_divider_gray"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>