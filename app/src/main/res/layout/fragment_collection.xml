<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryCenter"
        app:tabIndicatorColor="@color/colorPrimary_dark"
        app:tabSelectedTextColor="@color/colorPrimary_dark"
        app:tabIndicatorHeight="@dimen/padding_top_3dp"
        app:tabTextColor="@color/white" />

    <include layout="@layout/fragment_viewpager"/>

</LinearLayout>
