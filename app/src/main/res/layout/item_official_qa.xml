<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/admin_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_16dp"
        android:paddingTop="@dimen/padding_top_8dp"
        android:paddingBottom="@dimen/margin_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.biu.modulebase.binfenjiari.widget.CircleImageView
                android:id="@+id/admin_img"
                android:layout_width="@dimen/width_45dp"
                android:layout_height="@dimen/height_45dp"
                android:layout_gravity="top"
                android:src="@mipmap/header_pic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_8dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/admin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="常州市政府"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@+id/toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/padding_right_16dp"
                        android:paddingLeft="@dimen/padding_left_16dp"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/qa_switch"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/admin_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_margin_4dp"
                    android:text="21小时前"
                    android:textColor="@color/app_text_color_secondary"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/admin_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_top_8dp"
                    android:layout_marginRight="@dimen/margin_right_16dp"
                    android:lineSpacingMultiplier="1.1"
                    android:text="好谜底，里吃到回调刚萨达阿萨斯大回来的的肯定没错"
                    android:textColor="@color/app_text_color_primary"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>