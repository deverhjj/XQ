<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/Ripple.Item.Foreground"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:elevation="@dimen/elevation_list_item"
             tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="睡觉时看看对抗"
            android:padding="@dimen/padding_8dp"
            android:textColor="@color/app_text_color_primary"
            android:textSize="@dimen/text_size_18"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2016/3/3-2016/5/5"
            android:paddingLeft="@dimen/padding_left_8dp"
            android:paddingRight="@dimen/padding_right_8dp"
            android:paddingBottom="@dimen/padding_bottom_8dp"
            android:textColor="@color/app_text_color_secondary"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>

</FrameLayout>