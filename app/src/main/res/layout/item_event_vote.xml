<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
             style="@style/Ripple.Item.Foreground"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:elevation="@dimen/elevation_list_item"
             tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/view_margin_8dp"
            android:paddingBottom="@dimen/view_margin_8dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="@dimen/padding_bottom_8dp"
                android:paddingTop="@dimen/padding_bottom_8dp"
                android:text="【投票】谁是最帅，美小学生"
                android:textColor="@color/app_text_color_primary"
                android:textSize="@dimen/text_size_16"/>


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="@dimen/padding_bottom_8dp"
                android:text="最美小学生活动"
                android:textColor="@color/app_text_color_primary"
                android:textSize="@dimen/text_size_14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    layout="@layout/part_image_vote"/>

                <include
                    layout="@layout/part_image_vote"/>

                <include
                    layout="@layout/part_image_vote"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_vote_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:text="共 6 个投票选项 （投票进行中......）"
                android:textColor="@color/app_text_color_secondary"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/hd_sj"
                android:layout_marginTop="@dimen/margin_top_8dp"
                android:drawablePadding="@dimen/padding_8dp"
                android:text="截止时间: 2016/3/2-2016/4/5"
                android:textColor="@color/app_text_color_secondary"
                android:textSize="@dimen/text_size_14"/>

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/part_action_list_item"
                android:layout_marginRight="0dp"
                android:layout_gravity="right"/>

        </LinearLayout>

</FrameLayout>