<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="center"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:orientation="horizontal"
    tools:showIn="@layout/item_av_image_text">

    <com.biu.modulebase.binfenjiari.widget.MyCheckBox
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:button="@drawable/selector_like"
        android:padding="@dimen/view_margin_5dp"
        android:gravity="center"
        android:textColor="@color/colorTextGray"
        android:clickable="false"
        android:text="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_5dp"
        android:layout_marginRight="5dp"
        android:text="/"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/view_margin_8dp"
        android:paddingRight="@dimen/view_margin_8dp"
        android:background="@null"
        android:src="@drawable/selector_share"/>

</LinearLayout>