<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/elevation_list_item"
    tools:targetApi="lollipop">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_16dp"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/vote_votesucess_greenman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="您已投票成功，感谢您的参与!"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/vertical_page_margin"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/vote"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            style="@style/Ripple.Button_Brown2"
            android:layout_marginTop="30dp"
            android:text="查看排行榜"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_height="@dimen/height_50dp" />
    </LinearLayout>

</FrameLayout>