<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">

    <LinearLayout
        android:id="@+id/ll_part_pop_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/vote_test_head"
            android:adjustViewBounds="true"
            android:visibility="visible"
            android:id="@+id/vote_pic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/padding_8dp"
            android:text="YY"
            android:maxLines="2"
            android:textColor="@color/app_text_color_primary"
            android:textSize="@dimen/text_size_16"
            android:id="@+id/name" />

        <CheckBox
            android:id="@+id/voteCheckBox"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:button="@drawable/selector_check_vote"
            android:textSize="@dimen/text_size_16"/>

    </LinearLayout>

</FrameLayout>
