<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_color_background"/>
            <corners android:topLeftRadius="@dimen/radius_5dp"
                     android:topRightRadius="@dimen/radius_5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/app_color_background"/>

            <corners
                
                android:topLeftRadius="@dimen/radius_5dp" android:topRightRadius="@dimen/radius_5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_color_foreground"/>

            <corners
                android:topLeftRadius="@dimen/radius_5dp" android:topRightRadius="@dimen/radius_5dp"/>
        </shape>
    </item>

</selector>