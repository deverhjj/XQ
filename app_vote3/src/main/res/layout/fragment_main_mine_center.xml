<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_person_top_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingTop="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_event_movement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableTop="@drawable/icon_person_activity"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:text="活动"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_project"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableTop="@drawable/icon_person_project"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:text="课题"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_publish"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableTop="@drawable/icon_person_circle"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:text="发布"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_collection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableTop="@drawable/icon_person_shoucang"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:text="收藏"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableTop="@drawable/icon_person_scroe"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:text="积分"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/tv_group_foot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/margin_8dp"
                        android:drawableTop="@drawable/icon_person_foot"
                        android:gravity="center_horizontal"
                        android:paddingTop="4dp"
                        android:text="成长足迹"
                        android:textColor="@color/app_text_color_primary"
                        android:textSize="@dimen/text_size_14" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/colorAppBackground" />

                <FrameLayout
                    android:id="@+id/fl_report_state"
                    style="@style/Ripple.Item.Foreground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_person_report_state"
                        android:drawablePadding="4dp"
                        android:text="小记者认证" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:text="已认证"
                        android:textColor="@color/app_text_color_secondary" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:src="@mipmap/more_arrow_small"
                        android:visibility="gone" />

                </FrameLayout>

                <include layout="@layout/divider_h" />

                <FrameLayout
                    android:id="@+id/fl_report_work"
                    style="@style/Ripple.Item.Foreground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_person_zuopin"
                        android:drawablePadding="4dp"
                        android:text="我的作品" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:src="@mipmap/more_arrow_small" />
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/colorAppBackground" />

                <FrameLayout
                    android:id="@+id/fl_feedback"
                    style="@style/Ripple.Item.Foreground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_person_friend"
                        android:drawablePadding="4dp"
                        android:text="意见反馈" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:src="@mipmap/more_arrow_small" />

                </FrameLayout>

                <include layout="@layout/divider_h" />

                <FrameLayout
                    android:id="@+id/fl_setting"
                    style="@style/Ripple.Item.Foreground"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_person_set"
                        android:drawablePadding="4dp"
                        android:text="设置" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:src="@mipmap/more_arrow_small" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryCenter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/iv_home_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/message" />

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="55dp"
        layout="@layout/item_person_center_cardview"/>


</FrameLayout>
