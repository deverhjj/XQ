<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bannersliderview_container"
        android:layout_width="match_parent"
        android:layout_height="220dip">

        <!-- ViewPager -->
        <android.support.v4.view.ViewPager
            android:id="@+id/bannersliderview_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bannersliderview_viewpager"
            android:background="#44000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dip"
            android:visibility="gone">

            <!-- Banner的文字描述 -->
            <TextView
                android:id="@+id/bannersliderview_tv_banner_text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />

        </LinearLayout>
        <!-- 小圆点的父控件 -->
        <LinearLayout
            android:id="@+id/bannersliderview_ll_dot_group_banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/transparent"
            android:paddingRight="@dimen/height_8dp"
            android:layout_marginBottom="@dimen/view_margin_8dp"
            android:gravity="right"
            android:orientation="horizontal"></LinearLayout>
    </RelativeLayout>

</merge>
