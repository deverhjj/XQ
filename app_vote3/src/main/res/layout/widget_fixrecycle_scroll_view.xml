<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_bottom_12dp"
        android:paddingTop="@dimen/view_margin_16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fixview_tv_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/icon_dash_line"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:text="推荐活动"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/fixview_tv_text_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/app_text_color_secondary"
                android:paddingRight="@dimen/margin_16dp"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:text="更多"
                android:textSize="@dimen/text_size_14" />

        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fixview_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

    </LinearLayout>

</merge>
