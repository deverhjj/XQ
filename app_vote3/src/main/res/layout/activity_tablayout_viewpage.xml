<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryCenter"
        android:elevation="0dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimary_dark"
        app:tabIndicatorHeight="@dimen/height_3dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimary_dark"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabTextColor="@color/white"/>

    <!--app:tabPadding="@dimen/view_margin_8dp"-->
    <!--app:tabMaxWidth="60dp"-->
    <!--app:tabMinWidth="60dp"-->

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
