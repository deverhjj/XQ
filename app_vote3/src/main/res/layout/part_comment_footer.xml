<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_color_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/com_facebook_close"/>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_input"
        android:hint="马上评论..."
        android:imeOptions="actionSend"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textSize="14sp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/action_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/good_stroke"
            android:drawablePadding="@dimen/view_margin_4dp"
            android:gravity="center"
            android:paddingBottom="@dimen/view_margin_4dp"
            android:paddingLeft="@dimen/view_margin_6dp"
            android:paddingRight="@dimen/view_margin_6dp"
            android:paddingTop="@dimen/view_margin_4dp"
            android:text="50"
            android:textColor="@color/app_text_color_secondary"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/action_post"
            style="@style/Ripple.Button_Orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:text="发送"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </FrameLayout>


</LinearLayout>