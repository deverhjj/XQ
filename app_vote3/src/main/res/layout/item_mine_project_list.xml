<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/view_margin_16dp"
    android:paddingLeft="@dimen/view_margin_16dp"
    android:paddingRight="@dimen/view_margin_16dp"
    android:paddingTop="@dimen/view_margin_16dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常州地理"
            android:textColor="@color/app_text_color_primary"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingTop="6dp"
            android:text="【课题要求】字数2000字以上，要求现场踩点，有事实依据，参考文件不少于3篇，参考文件不少于3篇，参考文件不少于3篇"
            android:textColor="@color/app_text_color_secondary"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/view_margin_4dp"
            android:paddingTop="10dp"
            android:text="来自常州博物馆"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>

</FrameLayout>
