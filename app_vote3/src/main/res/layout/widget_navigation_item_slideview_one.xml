<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/view_margin_4dp"
    android:paddingRight="@dimen/view_margin_4dp">

    <FrameLayout
        android:id="@+id/fl_slide_movement"
        style="@style/Ripple.Item.Foreground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_widget_navislide_one"
            android:paddingBottom="@dimen/view_margin_8dp"
            android:paddingTop="@dimen/view_margin_8dp"
            android:text="实践活动"
            android:textColor="@android:color/primary_text_light_nodisable" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_slide_base_activity"
        style="@style/Ripple.Item.Foreground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_widget_navislide_two"
            android:paddingBottom="@dimen/view_margin_8dp"
            android:paddingTop="@dimen/view_margin_8dp"
            android:text="成长基地"
            android:textColor="@android:color/primary_text_light_nodisable" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_slide_project"
        style="@style/Ripple.Item.Foreground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_widget_navislide_three"
            android:paddingBottom="@dimen/view_margin_8dp"
            android:paddingTop="@dimen/view_margin_8dp"
            android:text="校外课程"
            android:textColor="@android:color/primary_text_light_nodisable" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_slide_report"
        style="@style/Ripple.Item.Foreground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_widget_navislide_four"
            android:paddingBottom="@dimen/view_margin_8dp"
            android:paddingTop="@dimen/view_margin_8dp"
            android:text="小记者"
            android:textColor="@android:color/primary_text_light_nodisable" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_slide_video"
        style="@style/Ripple.Item.Foreground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/icon_widget_navislide_five"
            android:paddingBottom="@dimen/view_margin_8dp"
            android:paddingTop="@dimen/view_margin_8dp"
            android:text="视听库"
            android:textColor="@android:color/primary_text_light_nodisable" />

    </FrameLayout>

</LinearLayout>