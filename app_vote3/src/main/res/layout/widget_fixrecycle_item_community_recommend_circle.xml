<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Ripple.Item.Foreground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/view_margin_8dp"
    android:paddingLeft="@dimen/view_margin_16dp"
    android:paddingRight="@dimen/view_margin_16dp"
    android:paddingTop="@dimen/view_margin_8dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/banner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/test_flower" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/banner"
            android:orientation="vertical"
            android:paddingBottom="@dimen/view_margin_4dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="2"
                android:text="周末绘本阅读"
                android:textColor="@color/app_text_color_primary"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/view_margin_4dp"
                android:paddingTop="4dp"
                android:text="暧昧是诸国的花朵"
                android:textColor="@color/app_text_color_secondary"
                android:textSize="@dimen/text_size_14" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:drawableLeft="@mipmap/good_stroke"
                    android:drawablePadding="@dimen/view_margin_4dp"
                    android:text="30"
                    android:textColor="@color/app_text_color_secondary"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:drawableLeft="@mipmap/good_stroke"
                    android:layout_marginLeft="@dimen/padding_top_10dp"
                    android:drawablePadding="@dimen/view_margin_4dp"
                    android:text="30"
                    android:textColor="@color/app_text_color_secondary"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_8dp"
            android:background="@drawable/bg_green_empty_rectangle_corner"
            android:paddingBottom="@dimen/view_margin_4dp"
            android:paddingLeft="@dimen/view_margin_6dp"
            android:paddingRight="@dimen/view_margin_6dp"
            android:paddingTop="@dimen/view_margin_4dp"
            android:text="加入"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>

</FrameLayout>
